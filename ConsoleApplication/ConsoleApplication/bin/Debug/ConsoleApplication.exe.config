<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
      <section name="fileSystemWatcher" type="ConfigFilesWatcher.Config.Sections.FileSystemWatcherConfigSection, CustomFilesWatcher"/>
    </configSections>
  
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>

    <fileSystemWatcher>
      <folders>
        <folder path="D:\test1"></folder>
        <folder path="D:\test2"></folder>
        <folder path="D:\test3"></folder>
      </folders>
      
      <rules>
        <add path="D:\test_png" filter="^.*\.png$"/>
        <add path="D:\test_txt" filter="^.*\.txt$"/>
      </rules>
    
      <culture value="ru-RU"></culture>
    </fileSystemWatcher>

    
</configuration>